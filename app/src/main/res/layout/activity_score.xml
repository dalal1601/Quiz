<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tset2">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/score_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/score" />


    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_image"
        android:layout_marginTop="65dp"
        android:text="Your Score is: "
        android:textColor="@color/white"
        android:textSize="20sp" />

    <!-- Logout Button -->

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_image"
        android:layout_marginTop="64dp"
        android:text="50%"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:translationX="180dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:translationX="100dp"
        android:translationY="340dp" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/score_text"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="58dp"
        android:layout_marginBottom="39dp"
        android:text="Logout" />

    <Button
        android:id="@+id/tryagain_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/score_text"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:text="try again"
        android:translationX="200dp" />


</RelativeLayout>
